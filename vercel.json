{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "painel/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // üî• SERVE ARQUIVOS DO FRONTEND
    {
      "src": "/src/(.*)",
      "dest": "/frontend/src/$1"
    },
    
    // üî• SERVE ARQUIVOS DO PAINEL (ESTRUTURA ATUAL)
    {
      "src": "/src/(.*)",
      "dest": "/painel/src/$1"
    },
    
    // üõ†Ô∏è PAINEL ADMIN
    {
      "src": "/painel-admin",
      "dest": "/painel/index.html"
    },
    {
      "src": "/painel-admin/(.*)",
      "dest": "/painel/$1"
    },
    
    // üé® FRONTEND - TODAS OUTRAS URLs
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://seehere-backend.onrender.com"
  }
}
