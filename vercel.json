{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "painel-admin/**/*", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/painel-admin",
      "dest": "/painel-admin/index.html"
    },
    {
      "src": "/painel-admin/(.*)",
      "dest": "/painel-admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://seehere-backend.onrender.com"
  }
}
