{
  "version": 2,
  "builds": [
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "painel/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/painel-admin",
      "dest": "/painel/index.html"
    },
    {
      "src": "/painel-admin/(.*)", 
      "dest": "/painel/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://seehere-backend.onrender.com"
  }
}
